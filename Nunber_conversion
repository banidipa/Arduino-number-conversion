#include <Keypad.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

// LCD setup
LiquidCrystal_I2C lcd(0x27, 16, 2); // I2C address 0x27, 16 columns, 2 rows

// Keypad setup
const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};
byte rowPins[ROWS] = {9, 8, 7, 6}; // R1–R4
byte colPins[COLS] = {5, 4, 3, 2}; // C1–C4

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

String input = "";
int mode = 0;

void setup() {
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0,0);
  lcd.print("A:D2B B:B2D C:B2H");
}

void loop() {
  char key = keypad.getKey();
  if (key) {
    if (mode == 0) {
      if (key == 'A') {
        mode = 1;
        input = "";
        lcd.clear();
        lcd.print("Decimal to Binary");
        delay(1000);
        lcd.clear();
        lcd.print("Enter number:");
      } else if (key == 'B') {
        mode = 2;
        input = "";
        lcd.clear();
        lcd.print("Binary to Decimal");
        delay(1000);
        lcd.clear();
        lcd.print("Enter number:");
      } else if (key == 'C') {
        mode = 3;
        input = "";
        lcd.clear();
        lcd.print("Binary to Hex");
        delay(1000);
        lcd.clear();
        lcd.print("Enter number:");
      }
    } else {
      if (key == '#') {
        lcd.clear();
        if (mode == 1) {
          lcd.print("Bin: ");
          lcd.print(String(input.toInt(), BIN));
        } else if (mode == 2) {
          lcd.print("Dec: ");
          lcd.print(strtol(input.c_str(), NULL, 2));
        } else if (mode == 3) {
          lcd.print("Hex: ");
          lcd.print(String(strtol(input.c_str(), NULL, 2), HEX));
        }
        delay(3000);
        lcd.clear();
        lcd.print("A:D2B B:B2D C:B2H");
        mode = 0;
        input = "";
      } else if (key == '*') {
        input = "";
        lcd.clear();
        lcd.print("Enter number:");
      } else {
        input += key;
        lcd.setCursor(0,1);
        lcd.print(input);
      }
    }
  }
}
